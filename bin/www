#!/nodejs
var debug = require('debug')('OpenShift-Sample-App');
var app = require('../app');

app.set('port', process.env.PORT || 8080);

var server = app.listen(app.get('port'), function() {
  debug('Express server listening on port ' + server.address().port);
});


